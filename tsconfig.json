{
	"extends": "./.nuxt/tsconfig.json", // Extend the Nuxt-generated config
	"compilerOptions": {
		"types": ["@nuxt/types", "@nuxtjs/composition-api", "@types/node"],
		"target": "ES2020",
		"module": "ESNext",
		"paths": {
			"#app": ["./.nuxt/types/app"],
			"#components": ["./.nuxt/components"]
		},
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["nuxt.config.ts", "**/*.ts", "**/*.vue"]
}
